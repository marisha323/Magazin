<style>
    @@import url('https://fonts.googleapis.com/css?family=Raleway&display=swap');
    @@import url('https://fonts.googleapis.com/css?family=Raleway&display=swap');

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Raleway', sans-serif;
        background-color: #A0C4DC;
    }

    .card {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 30px auto;
    }

        .card .product {
            width: 600px;
            height: 550px;
            background: #fff;
            position: relative;
            display: flex;
            justify-content: flex-end;
            border-radius: .5rem;
            transition: all .3s ease
        }

            .card .product .left-side {
                position: absolute;
                top: 8%;
                left: -20%;
                width: 350px;
                height: 487px;
                box-shadow: 4px 4px 25px -2px rgba(0, 0, 0, 0.3)
            }

            .card .product .container {
                background: radial-gradient(#87EDF1, #53E0F0);
                width: 350px;
                height: 388px;
                border-radius: .5rem .5rem 0 0;
            }

            .card .product .left-side .main-photo {
                position: absolute;
                top: 6%;
                left: -20%;
                width: 85%;
                height: 250px;
            }

                .card .product .left-side .main-photo img {
                    width: 100%;
                    filter: saturate(150%) contrast(120%) hue-rotate(10deg) drop-shadow(1px 20px 10px rgba(0, 0, 0, 0.3));
                }

            .card .product .left-side .social {
                position: absolute;
                top: 2%;
                left: 3%;
                width: 94%;
                color: #fff;
                font-size: 1.4rem;
                padding: .5rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
                transition: all .3s ease
            }

                .card .product .left-side .social i {
                    cursor: pointer
                }

                    .card .product .left-side .social i:hover {
                        color: #ff3f40;
                    }

            .card .product .left-side .green-apple {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                background: #2c3e55;
                height: 100px;
                border-radius: 0 0 .5rem .5rem
            }

                .card .product .left-side .green-apple div {
                    padding: .5rem;
                    margin: .3rem;
                    width: 55px;
                    height: 55px;
                    border: 1px solid #fff;
                    transition: all .3s ease;
                    border-radius: .5rem
                }

                    .card .product .left-side .green-apple div img {
                        width: 100%;
                    }

                    .card .product .left-side .green-apple div:hover {
                        transform: translateY(-10px) scale(1.1);
                        border-color: #ff3f40
                    }

                .card .product .left-side .green-apple:hover div {
                    cursor: pointer;
                }

            .card .product .right-side {
                position: absolute;
                top: 8%;
                left: 44%;
                width: 100%;
            }

                .card .product .right-side .text {
                    position: absolute;
                    top: 0%;
                    left: 0%;
                }

                    .card .product .right-side .text h1 {
                        color: #4c4c4c;
                        font-size: 1.6rem;
                        margin-top: .8rem;
                    }

                    .card .product .right-side .text span {
                        color: #a6a6a6;
                        font-size: .9rem
                    }

                .card .product .right-side .price {
                    /*color: #ff3f40;*/
                    color: #1E6FF1;
                    margin-top: 6rem;
                    display: flex;
                    justify-content: flex-start;
                    align-items: center
                }

                    .card .product .right-side .price h2 {
                        font-size: 2.9rem
                    }


                    .card .product .right-side .price span:last-child {
                        color: #a6a6a6;
                        margin-left: .7rem;
                        font-size: 1.8rem
                    }

                .card .product .right-side .select-color {
                    margin-top: 2rem
                }

                    .card .product .right-side .select-color span {
                        color: #a4a4a4;
                        font-size: .9rem;
                        letter-spacing: 1.2px
                    }

                    .card .product .right-side .select-color .color-apple {
                        display: flex;
                        justify-content: flex-start;
                        align-items: center;
                    }

                        .card .product .right-side .select-color .color-apple > div {
                            margin-right: .4rem;
                            margin-top: .9rem;
                            width: 2.8rem;
                            height: 2.8rem;
                            padding: .3rem;
                            border: 1px solid #a6a6a6;
                            cursor: pointer;
                            transition: all .3s ease
                        }

                        .card .product .right-side .select-color .color-apple div:first-child {
                            transform: scale(1.1);
                            border-color: #ff3f40
                        }

                        .card .product .right-side .select-color .color-apple div img {
                            width: 100%
                        }

                        .card .product .right-side .select-color .color-apple div:hover {
                            transform: translateY(-10px) scale(1.1);
                            border-color: #ff3f40
                        }

                .card .product .right-side .info {
                    margin-top: 1.5rem;
                }

                    .card .product .right-side .info span {
                        color: #a4a4a4;
                        font-size: .9rem
                    }

                    .card .product .right-side .info ul {
                        margin-top: .8rem;
                    }


                        .card .product .right-side .info ul li {
                            padding: 0 0 .4rem .2rem;
                            font-size: .8rem;
                            color: #333
                        }

                .card .product .right-side .btn {
                    margin-top: 1rem;
                }

                    .card .product .right-side .btn button {
                        padding: 1.5rem 3.1rem;
                        border: none;
                        cursor: pointer;
                        background-image: linear-gradient(to top, #578CE1 0%, #0856E5 100%);
                        color: #fff;
                        font-weight: 800;
                        border-radius: .5rem;
                        font-size: 1.1rem;
                        letter-spacing: 1.3px;
                        box-shadow: 2px 2px 25px -7px #4c4c4c;
                        transition: all .5s ease
                    }

                        .card .product .right-side .btn button:hover {
                            background: #ff3f40;
                            transform: translateY(-10px) scale(1.1)
                        }

</style>

<div class="card">
    <div class="product">
        <div class="left-side">
            <div class="container">
                @model Product
                <div class="main-photo">
                    
                     <img src="~/Imeg2/@Model.Name/@Model.PathLong" />
                    
                </div>
                <div class="social">
                    <i class="fas fa-share-alt"></i>
                    <i class="fas fa-heart"></i>
                </div>
            </div>

            <div class="green-apple">
                @foreach (var item in ViewBag.Imegs)
                {
                    <div>

                        <img src="~/Imeg2/@Model.Name/@item.Pass" />

                    </div>
                }

                @*  <div>
                @foreach (var item in Model)
                {
                <img src="~/Imeg2/@item.Name/@item.PathLong" />
                }
                </div>
                <div>
                @foreach (var item in Model)
                {
                <img src="~/Imeg2/@item.Name/@item.PathLong" />
                }
                </div>
                <div>
                @foreach (var item in Model)
                {
                <img src="~/Imeg2/@item.Name/@item.PathLong" />
                }
                </div>*@
            </div>
        </div>
        <div class="right-side">

            <div class="text">
               
                    <h1>@Model.Name</h1>
                

            </div>
            <div class="price">
               
                    <h2><strong>@Model.Price грн</strong></h2>
                

            </div>
            <div class="select-color">
            </div>
            <div class="info">
                <span>BENEFITS</span>
               
                    <p>@Model.Descriptions</p>

                
            </div>
            <div class="btn">
                <button>ADD TO CART</button>
            </div>
        </div>
    </div>
</div>